<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Figma-like Color Palette -->
    <SolidColorBrush x:Key="PrimaryBlue" Color="#007AFF"/>
    <SolidColorBrush x:Key="SecondaryPurple" Color="#5856D6"/>
    <SolidColorBrush x:Key="AccentPink" Color="#FF2D55"/>
    <SolidColorBrush x:Key="SuccessGreen" Color="#34C759"/>
    <SolidColorBrush x:Key="WarningOrange" Color="#FF9500"/>
    <SolidColorBrush x:Key="ErrorRed" Color="#FF3B30"/>

    <!-- Neutrals -->
    <SolidColorBrush x:Key="Black" Color="#000000"/>
    <SolidColorBrush x:Key="Gray1" Color="#8E8E93"/>
    <SolidColorBrush x:Key="Gray2" Color="#C7C7CC"/>
    <SolidColorBrush x:Key="Gray3" Color="#E5E5EA"/>
    <SolidColorBrush x:Key="Gray4" Color="#F2F2F7"/>
    <SolidColorBrush x:Key="White" Color="#FFFFFF"/>

    <!-- Backgrounds -->
    <SolidColorBrush x:Key="BackgroundPrimary" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="BackgroundSecondary" Color="#F2F2F7"/>
    <SolidColorBrush x:Key="BackgroundTertiary" Color="#E5E5EA"/>

    <!-- Text -->
    <SolidColorBrush x:Key="TextPrimary" Color="#000000"/>
    <SolidColorBrush x:Key="TextSecondary" Color="#8E8E93"/>
    <SolidColorBrush x:Key="TextTertiary" Color="#C7C7CC"/>

    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="#007AFF"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#000000"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#E5E5EA"/>

    <!-- Transparent -->
    <SolidColorBrush x:Key="TransparentBrush" Color="Transparent"/>

</ResourceDictionary>