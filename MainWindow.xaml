<Window x:Class="Figma.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Figma Design Tool"
        Height="470"
        Width="1000"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Icon="Assets/Icons/app.ico">

    <Window.Resources>
        <!-- Figma Colors -->
        <SolidColorBrush x:Key="Background" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SidebarBg" Color="#F5F5F5"/>
        <SolidColorBrush x:Key="BorderColor" Color="#E5E5E5"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#000000"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#666666"/>
        <SolidColorBrush x:Key="PrimaryBlue" Color="#0D99FF"/>
        <SolidColorBrush x:Key="SecondaryPurple" Color="#9747FF"/>
        <SolidColorBrush x:Key="AccentGreen" Color="#34C759"/>
        <SolidColorBrush x:Key="AccentRed" Color="#FF375F"/>

        <!-- Simple Icons using Geometry -->
        <Geometry x:Key="SquareIcon">M0,0 L12,0 L12,12 L0,12 Z</Geometry>
        <Geometry x:Key="CircleIcon">M6,0 A6,6 0 1 1 0,6 A6,6 0 0 1 6,0 Z</Geometry>
        <Geometry x:Key="PlayIcon">M3,3 L9,6 L3,9 Z</Geometry>
        <Geometry x:Key="MobileIcon">M4,2 L10,2 L10,14 L4,14 Z M7,13 L7,13</Geometry>
        <Geometry x:Key="PencilIcon">M2,14 L14,2 L14,6 L6,14 Z M4,12 L4,12</Geometry>

        <!-- Styles -->
        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="Margin" Value="16,20,16,8"/>
        </Style>

        <Style x:Key="LayerText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="PropertyLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="Margin" Value="16,12,16,4"/>
        </Style>

        <Style x:Key="ValueText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        </Style>

        <!-- Icon Styles -->
        <Style x:Key="IconStyle" TargetType="Path">
            <Setter Property="Width" Value="12"/>
            <Setter Property="Height" Value="12"/>
            <Setter Property="Stretch" Value="Uniform"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource Background}">
        <!-- Main Layout -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240"/>
                <!-- Left Sidebar -->
                <ColumnDefinition Width="*"/>
                <!-- Canvas -->
                <ColumnDefinition Width="280"/>
                <!-- Right Sidebar -->
            </Grid.ColumnDefinitions>

            <!-- ========== LEFT SIDEBAR ========== -->
            <Grid Grid.Column="0"
                  Background="{StaticResource SidebarBg}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Layers Section -->
                <Border Grid.Row="0"
                        BorderBrush="{StaticResource BorderColor}"
                        BorderThickness="0,0,0,1">
                    <StackPanel>
                        <TextBlock Text="Layers"
                                   Style="{StaticResource SectionTitle}"/>

                        <!-- Frame -->
                        <StackPanel Orientation="Horizontal" 
                                    Margin="16,4,16,4"
                                    MouseEnter="LayerItem_MouseEnter"
                                    MouseLeave="LayerItem_MouseLeave"
                                    MouseDown="LayerItem_MouseDown">
                            <Path Style="{StaticResource IconStyle}"
                                  Data="{StaticResource SquareIcon}"
                                  Fill="{StaticResource PrimaryBlue}"
                                  Stroke="{StaticResource PrimaryBlue}"/>
                            <TextBlock Text="Frame" Style="{StaticResource LayerText}"/>
                        </StackPanel>

                        <!-- Button -->
                        <StackPanel Orientation="Horizontal" 
                                    Margin="32,4,16,4"
                                    MouseEnter="LayerItem_MouseEnter"
                                    MouseLeave="LayerItem_MouseLeave"
                                    MouseDown="LayerItem_MouseDown">
                            <Path Style="{StaticResource IconStyle}"
                                  Data="{StaticResource CircleIcon}"
                                  Width="10" Height="10"
                                  Fill="{StaticResource AccentRed}"
                                  Stroke="{StaticResource AccentRed}"/>
                            <TextBlock Text="Button" Style="{StaticResource LayerText}"/>
                        </StackPanel>

                        <!-- Welcome Text -->
                        <StackPanel Orientation="Horizontal" 
                                    Margin="32,4,16,4"
                                    MouseEnter="LayerItem_MouseEnter"
                                    MouseLeave="LayerItem_MouseLeave"
                                    MouseDown="LayerItem_MouseDown">
                            <TextBlock Text="T" 
                                       FontSize="10"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource PrimaryBlue}"
                                       Width="12"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,8,0"/>
                            <TextBlock Text="Welcome Text" Style="{StaticResource LayerText}"/>
                        </StackPanel>

                        <!-- Play Icon -->
                        <StackPanel Orientation="Horizontal" 
                                    Margin="16,4,16,12"
                                    MouseEnter="LayerItem_MouseEnter"
                                    MouseLeave="LayerItem_MouseLeave"
                                    MouseDown="LayerItem_MouseDown">
                            <Path Style="{StaticResource IconStyle}"
                                  Data="{StaticResource PlayIcon}"
                                  Fill="{StaticResource SecondaryPurple}"
                                  Stroke="{StaticResource SecondaryPurple}"/>
                            <TextBlock Text="Play Icon" Style="{StaticResource LayerText}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Assets Section -->
                <Border Grid.Row="1">
                    <StackPanel>
                        <TextBlock Text="Assets"
                                   Style="{StaticResource SectionTitle}"/>

                        <!-- Color Assets -->
                        <WrapPanel Margin="16,0,16,16"
                                   HorizontalAlignment="Center">
                            <StackPanel Margin="8">
                                <Border Width="32" 
                                        Height="32" 
                                        Background="#6099FF"
                                        CornerRadius="4"/>
                                <TextBlock Text="#6099FF"
                                           Foreground="{StaticResource TextSecondary}"
                                           FontSize="10"
                                           HorizontalAlignment="Center"
                                           Margin="0,4,0,0"/>
                            </StackPanel>

                            <StackPanel Margin="8">
                                <Border Width="32" 
                                        Height="32" 
                                        Background="#9747FF"
                                        CornerRadius="4"/>
                                <TextBlock Text="#9747FF"
                                           Foreground="{StaticResource TextSecondary}"
                                           FontSize="10"
                                           HorizontalAlignment="Center"
                                           Margin="0,4,0,0"/>
                            </StackPanel>

                            <StackPanel Margin="8">
                                <Border Width="32" 
                                        Height="32" 
                                        Background="#34C759"
                                        CornerRadius="4"/>
                                <TextBlock Text="#34C759"
                                           Foreground="{StaticResource TextSecondary}"
                                           FontSize="10"
                                           HorizontalAlignment="Center"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                        </WrapPanel>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- ========== CANVAS AREA ========== -->
            <!-- ИСПРАВЛЕНО: фон синий как в макете Figma -->
            <Border Grid.Column="1"
                    Background="{StaticResource PrimaryBlue}">
                <Grid>
                    <!-- Grid Background -->
                    <Canvas>
                        <Rectangle Width="1000" 
                                   Height="470"
                                   Stroke="{StaticResource BorderColor}"
                                   StrokeThickness="1"
                                   StrokeDashArray="4 4"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Canvas>

                    <!-- Mobile App Frame -->
                    <Border Width="375"
                            Height="812"
                            Background="#F8F9FA"
                            CornerRadius="12"
                            BorderBrush="{StaticResource BorderColor}"
                            BorderThickness="1"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                        <Grid>
                            <!-- App Content -->
                            <StackPanel VerticalAlignment="Center"
                                        HorizontalAlignment="Center">
                                <!-- App Icon -->
                                <Path Data="{StaticResource MobileIcon}"
                                      Width="48" Height="48"
                                      Fill="{StaticResource PrimaryBlue}"
                                      Stroke="{StaticResource PrimaryBlue}"
                                      HorizontalAlignment="Center"
                                      Margin="0,0,0,20"/>

                                <!-- Color Dots -->
                                <WrapPanel HorizontalAlignment="Center"
                                           Margin="0,0,0,30">
                                    <Ellipse Width="12" Height="12" 
                                             Fill="{StaticResource PrimaryBlue}" Margin="4"/>
                                    <Ellipse Width="12" Height="12" 
                                             Fill="{StaticResource PrimaryBlue}" Margin="4"/>
                                    <Ellipse Width="12" Height="12" 
                                             Fill="{StaticResource SecondaryPurple}" Margin="4"/>
                                    <Ellipse Width="12" Height="12" 
                                             Fill="{StaticResource AccentGreen}" Margin="4"/>
                                </WrapPanel>

                                <!-- Get Started Button -->
                                <!-- ИСПРАВЛЕНО: шрифт 16px как в макете -->
                                <Border x:Name="GetStartedButton"
                                        Width="200"
                                        Height="44"
                                        Background="{StaticResource PrimaryBlue}"
                                        CornerRadius="8"
                                        HorizontalAlignment="Center"
                                        MouseDown="GetStartedButton_MouseDown"
                                        Cursor="Hand">
                                    <TextBlock Text="Get Started"
                                               Foreground="White"
                                               FontSize="16"
                                               FontWeight="SemiBold"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>
                            </StackPanel>

                            <!-- Frame Label -->
                            <TextBlock Text="375 × 812 • 100%"
                                       FontSize="10"
                                       Foreground="{StaticResource TextSecondary}"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Bottom"
                                       Margin="8"/>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!-- ========== RIGHT SIDEBAR ========== -->
            <Grid Grid.Column="2"
                  Background="{StaticResource SidebarBg}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Design Tab Header -->
                <Border Grid.Row="0"
                        Background="#E5E5E5"
                        Padding="16,12">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="{StaticResource PencilIcon}"
                              Width="16" Height="16"
                              Fill="{StaticResource TextPrimary}"
                              Stroke="{StaticResource TextPrimary}"
                              Margin="0,0,8,0"/>
                        <TextBlock Text="Design"
                                   Foreground="{StaticResource TextPrimary}"
                                   FontSize="13"
                                   FontWeight="SemiBold"/>
                    </StackPanel>
                </Border>

                <!-- Properties Content -->
                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Size Section -->
                        <TextBlock Text="Size"
                                   Style="{StaticResource PropertyLabel}"/>

                        <Grid Margin="16,0,16,20">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Width -->
                            <StackPanel Grid.Row="0" 
                                        Margin="0,0,0,12">
                                <TextBlock Text="Width"
                                           FontSize="11"
                                           Foreground="{StaticResource TextSecondary}"
                                           Margin="0,0,0,4"/>
                                <Border Background="White"
                                        BorderBrush="{StaticResource BorderColor}"
                                        BorderThickness="1"
                                        CornerRadius="4"
                                        Padding="8,6">
                                    <Grid>
                                        <TextBlock Text="1000"
                                                   Style="{StaticResource ValueText}"/>
                                        <TextBlock Text="px"
                                                   Foreground="{StaticResource TextSecondary}"
                                                   FontSize="10"
                                                   HorizontalAlignment="Right"/>
                                    </Grid>
                                </Border>
                            </StackPanel>

                            <!-- Height -->
                            <StackPanel Grid.Row="1">
                                <TextBlock Text="Height"
                                           FontSize="11"
                                           Foreground="{StaticResource TextSecondary}"
                                           Margin="0,0,0,4"/>
                                <Border Background="White"
                                        BorderBrush="{StaticResource BorderColor}"
                                        BorderThickness="1"
                                        CornerRadius="4"
                                        Padding="8,6">
                                    <Grid>
                                        <TextBlock Text="470"
                                                   Style="{StaticResource ValueText}"/>
                                        <TextBlock Text="px"
                                                   Foreground="{StaticResource TextSecondary}"
                                                   FontSize="10"
                                                   HorizontalAlignment="Right"/>
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </Grid>

                        <!-- Fill Section -->
                        <TextBlock Text="Fill"
                                   Style="{StaticResource PropertyLabel}"/>

                        <Border Background="White"
                                BorderBrush="{StaticResource BorderColor}"
                                BorderThickness="1"
                                CornerRadius="4"
                                Margin="16,4,16,20"
                                Padding="12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Color Preview -->
                                <Border Grid.Column="0"
                                        Width="20" 
                                        Height="20" 
                                        Background="{StaticResource PrimaryBlue}"
                                        CornerRadius="4"
                                        Margin="0,0,12,0"/>

                                <!-- Color Info -->
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="#0D99FF"
                                               Style="{StaticResource ValueText}"/>
                                    <TextBlock Text="Primary / 100%"
                                               Foreground="{StaticResource TextSecondary}"
                                               FontSize="10"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Colors Section -->
                        <TextBlock Text="Colors"
                                   Style="{StaticResource PropertyLabel}"/>

                        <WrapPanel Margin="16,4,16,20">
                            <StackPanel Margin="4" Width="70">
                                <Border Width="32" 
                                        Height="32" 
                                        Background="{StaticResource PrimaryBlue}"
                                        CornerRadius="4"
                                        HorizontalAlignment="Center"/>
                                <TextBlock Text="Primary"
                                           Foreground="{StaticResource TextSecondary}"
                                           FontSize="10"
                                           HorizontalAlignment="Center"
                                           Margin="0,4,0,0"/>
                            </StackPanel>

                            <StackPanel Margin="4" Width="70">
                                <Border Width="32" 
                                        Height="32" 
                                        Background="{StaticResource SecondaryPurple}"
                                        CornerRadius="4"
                                        HorizontalAlignment="Center"/>
                                <TextBlock Text="Secondary"
                                           Foreground="{StaticResource TextSecondary}"
                                           FontSize="10"
                                           HorizontalAlignment="Center"
                                           Margin="0,4,0,0"/>
                            </StackPanel>

                            <!-- ИСПРАВЛЕНО: Accent цвет теперь зеленый как в макете -->
                            <StackPanel Margin="4" Width="70">
                                <Border Width="32" 
                                        Height="32" 
                                        Background="{StaticResource AccentGreen}"
                                        CornerRadius="4"
                                        HorizontalAlignment="Center"/>
                                <TextBlock Text="Accent"
                                           Foreground="{StaticResource TextSecondary}"
                                           FontSize="10"
                                           HorizontalAlignment="Center"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                        </WrapPanel>

                        <!-- Typography Section -->
                        <TextBlock Text="Typography"
                                   Style="{StaticResource PropertyLabel}"/>

                        <Border Background="White"
                                BorderBrush="{StaticResource BorderColor}"
                                BorderThickness="1"
                                CornerRadius="4"
                                Margin="16,4,16,0"
                                Padding="12">
                            <StackPanel>
                                <TextBlock Text="Inter • 16px"
                                           Style="{StaticResource ValueText}"/>
                                <!-- ИСПРАВЛЕНО: белый текст на синем фоне в макете -->
                                <TextBlock Text="Medium • #FFFFFF"
                                           Foreground="{StaticResource TextSecondary}"
                                           FontSize="10"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <Border Height="28"
                Background="#F5F5F5"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,1,0,0"
                VerticalAlignment="Bottom">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Ready • 1000 × 470 • @1x"
                           Foreground="{StaticResource TextSecondary}"
                           FontSize="11"
                           VerticalAlignment="Center"
                           Margin="16,0"/>

                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            Margin="0,0,16,0">
                    <TextBlock Text="100%"
                               Foreground="{StaticResource TextSecondary}"
                               FontSize="11"
                               VerticalAlignment="Center"
                               Margin="0,0,16,0"/>
                    <TextBlock Text="FPS: 60"
                               Foreground="{StaticResource TextSecondary}"
                               FontSize="11"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>