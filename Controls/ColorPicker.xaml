<UserControl x:Class="Figma.Controls.ColorPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="200" Height="100">
    <Border Background="#F2F2F7"
            CornerRadius="8"
            Padding="12">
        <StackPanel>
            <TextBlock Text="Color Picker"
                       FontWeight="SemiBold"
                       Margin="0,0,0,8"/>

            <WrapPanel>
                <Ellipse Width="24" Height="24" 
                         Fill="#007AFF" 
                         Margin="4"
                         Cursor="Hand"/>
                <Ellipse Width="24" Height="24" 
                         Fill="#5856D6" 
                         Margin="4"
                         Cursor="Hand"/>
                <Ellipse Width="24" Height="24" 
                         Fill="#FF2D55" 
                         Margin="4"
                         Cursor="Hand"/>
            </WrapPanel>
        </StackPanel>
    </Border>
</UserControl>